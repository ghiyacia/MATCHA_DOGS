{% extends 'base-online.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="Public/CSS/home_online.css" />
{% endblock %}

{% block body %}

    <div class="text-center mb-5">
        <h1 class="display-4 mb-3" style="color: rgb(245, 226, 198);">Historique des profils visit√©s</h1>
        <button class="btn btn-danger mb-5" type="button" onclick="remove_historical()">Supprimer mon historique</button>
    </div>
    <div class="row">
        {% for profile in profiles_visited %}
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ profile.profile_picture_path }}" style="height: 300px">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ profile.dog_name }}</h5>
                        <a href="online.php?page=show_profil&id={{ profile.id_user }}" class="btn btn-primary ">Voir le profil</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="Public/Javascript/remove-visits.js"></script>
    <script src="Public/Javascript/get-notifications.js"></script>
{% endblock %}