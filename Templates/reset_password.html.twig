{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="Public/CSS/home.css" />
{% endblock %}

{% block title %}Dog's Matcha{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-sm-md-lg-xl navbar-pers">
        <a class="navbar-brand link-logo" href="index.php?page=home"><img src="Public/Images/logo2.png" class="logo-img"></a>
        <ul class="navbar-nav">
            <li class="nav-item">
            <a href="index.php?page=login" class="btn btn-outline-secondary connect-button">Se connecter</a>
            </li>
        </ul>
    </nav>

    <div class="container container-pers margin-block">
            {% if failure_message is not empty %}
                {{ failure_message | raw }}
            {% endif %}

        <a href="index.php?page=home"><img src="Public/Images/logo.png" style="width: 315px; margin-bottom: 15px !important; display:flex; margin: auto"></a>
        <p style="text-align: center; font-family: cursive; font-size: 30px; color: currentcolor;">Réinitialisez votre mot de passe</p>
        <form method="POST" action="index.php?page=reset_password{% if key is not empty %}&key={{ key }}{% endif %}
        ">
            <div class="form-group">
                    <input name="new_password" id="password" class="form-control form-control-sm color-input" type="password" placeholder="Nouveau mot de passe"
                    {% if temporary_new_password is not empty %}
                        value="{{ temporary_new_password }}"
                    {% endif %}>
    
                    {% if new_password_message_alert is not empty %}
                        <small class="form-text alert-small-message">{{ new_password_message_alert }}</small>
                    {% endif %}
                    {% if already_exist is not empty %}
                        <small class="form-text alert-small-message">{{ already_exist }}</small>
                    {% endif %}
                </div>
    
    
                <div class="form-group">
                    <input name="new_password_confirm" id="password-confirm" class="form-control form-control-sm color-input" type="password" placeholder="Confirmation mot de passe"
                    {% if temporary_new_password_confirm is not empty %}
                        value="{{ temporary_new_password_confirm }}"
                    {% endif %}>
    
                    {% if new_password_confirm_message_alert is not empty %}
                        <small class="form-text alert-small-message">{{ new_password_confirm_message_alert }}</small>
                    {% endif %}
                    <small class="form-text text-muted">Le mot de passe doit contenir 6 caractères minimum.<br/>(Une majuscule, une minuscule, un chiffre et un caractère spécial)</small>
                </div>
            <button name="edit_button" id="edit-button" type="submit" class="btn btn-primary btn-block signup-button" disabled>Modifier</button>
        </form>
        <div class="text-center mt-4 mb-5">
            <a href="index.php?page=home" class="btn-link link-connect">Retour à la page d'accueil</a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="Public/Javascript/forms/form-reset-password.js"></script>
{% endblock %}